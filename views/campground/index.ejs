<%- layout('layouts/boilerplate')  %> 

<div id="cluster-map"></div>
<h1>Currently Explored Landmarks</h1>

<div>
    <a class="btn btn-primary my-3" href="/campgrounds/new">Add a New Landmark</a>
</div>

<% for (let campground of campgrounds) {%> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length) {%>
                    <img class="img-fluid" alt="" src="<%= campground.images[0].url  %> ">
                <% } else { %>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/dznf6c94r/image/upload/v1678912139/YelpCamp/ryi9xhrzq3ujuxsy81eb.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title  %> 
                    </h5>
                    <p class="card-text">
                        <%= campground.description  %> 
                    </p>
                    <p class="card-text">
                        <small class="text-secondary"><%= campground.location  %> </small>
                    </p>
                    <a href="/campgrounds/<%= campground._id  %> " class="btn btn-primary">View <%= campground.title  %> </a>
                </div>
            </div>
        </div>
    </div>
<% }%> 

<script>
    const mapboxToken = '<%- process.env.MAPBOX_token  %>'; //to be a string
    const campgrounds = <%-JSON.stringify(campgrounds)%>;
</script>
<script src="/javascripts/mapClusters.js"></script>


