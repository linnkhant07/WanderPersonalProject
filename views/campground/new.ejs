<%- layout('layouts/boilerplate')  %> 

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="validatedForm" novalidate>
            <div class="mb-3">
                <label class="form-label"  for="title">Title: </label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Title cannot be invalid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
                <div class="invalid-feedback">
                    Location cannot be invalid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price: </label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00" required>
                    <div class="invalid-feedback">
                        Price cannot be invalid
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url: </label>
                <input class="form-control" id="image" type="text" name="campground[image]" required>
                <div class="invalid-feedback">
                    Image cannot be invalid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="5" required></textarea>
                <div class="invalid-feedback">
                    Description cannot be invalid
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Save Campground</button>
            </div>
        </form>        
        <footer>
            <a href="/campgrounds">Back to Home Page</a>
        </footer>
    </div>
    
</div>




